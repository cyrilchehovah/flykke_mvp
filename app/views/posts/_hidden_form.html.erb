<%= form_for post do |f| %>
  <%= f.text_field :title, class: "hidden" %>
  <%= f.text_field :description, class: "hidden" %>
  <%= f.text_field :category, class: "hidden" %>
  <%= f.text_field :interest, class: "hidden" %>
  <%= f.text_field :type, class: "hidden" %>
  <%= f.text_field :url, class: "hidden" %>
  <%= f.text_field :image, class: "hidden" %>
  <%= f.text_field :video, class: 'hidden' %>
  <%= f.text_field :site_name, class: "hidden" %>
  <div class="row">
    <div class="text-center col-xs-6 col-md-offset-3">
       <button type="submit" id="post" class="actions-inline btn btn-primary">Submit your creation</button>
       <p class="actions-inline">or</p>
       <p class="actions-inline"><%= link_to 'Back', posts_path %></p>
    </div>
  </div>
<% end %>
